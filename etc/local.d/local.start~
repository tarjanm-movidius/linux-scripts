if ping -qw1t1c1 192.168.14.222 > /dev/null
then
 echo "mount remote file systems from 192.168.14.222..."
 echo "mount KOZOS"
 mount -t cifs -o username=bgergye,password=gergye,gid=1000,uid=1000 //192.168.14.222/KOZOS/ /mnt/smb/KOZOS/
 echo "mount Company"
 mount -t cifs -o username=bgergye,password=gergye,gid=1000,uid=1000,umask=022 //192.168.14.222/Company/ /mnt/smb/Company/
fi

if ping -qw1t1c1 192.168.22.3 > /dev/null
then
 echo "mount remote file systems from 192.168.22.3..."
 echo "mount home"
 mount -t cifs -o username=gb,password=xwon28zqpm,gid=1000,uid=1000 //192.168.22.3/gb/ /mnt/smb/home/
 echo "mount swdev"
 mount -t cifs -o username=gb,password=xwon28zqpm,gid=1000,uid=1000 //192.168.22.3/swdev/ /mnt/smb/swdev/
fi

