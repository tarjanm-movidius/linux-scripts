#!/bin/sh

[ -z "$1" ] && exit 1

. /etc/conf.d/mldonkey
[ -z "${CLI_PORT}" ] && CLI_PORT=4000

if which ncat >/dev/null 2>/dev/null; then
  (echo "dllink $1"; echo "q") | ncat ${SERVER} ${CLI_PORT} -w2
elif which netcat >/dev/null 2>/dev/null; then
  (echo "dllink $1"; echo "q") | netcat ${SERVER} ${CLI_PORT} -w2
else
  (echo "dllink $1"; echo "q") | nc ${SERVER} ${CLI_PORT} -w2
fi
